<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.499"
        app:cardBackgroundColor="@color/gris_oscuro"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/icono_rv"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                tools:srcCompat="@drawable/baseline_image_search_24" />

            <TextView
                android:id="@+id/nombre_rv"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/icono_rv"
                android:layout_marginStart="6dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@id/icono_rv"
                android:text="TextView"
                android:textColor="@color/dorado" />

            <TextView
                android:id="@+id/descripcion_rv"
                android:layout_width="253dp"
                android:layout_height="46dp"
                android:layout_below="@id/nombre_rv"
                android:layout_marginStart="-253dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/nombre_rv"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="8sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
